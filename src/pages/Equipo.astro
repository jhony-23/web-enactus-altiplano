---
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
---

<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <title>Equipo - Enactus</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    </head>
    <body>
        <Navbar />
        <section class="section">
            <h2>Nuestro Equipo</h2>
            <div
                style="display: flex; flex-wrap: wrap; gap: 1.5rem; margin-top: 2rem;"
            >
                {
                    [
                        { nombre: "Ana", rol: "Líder de proyecto" },
                        { nombre: "Luis", rol: "Diseñador" },
                        { nombre: "Marta", rol: "Investigadora" },
                        { nombre: "José", rol: "Programador" },
                    ].map(({ nombre, rol }) => (
                        <div
                            class="card"
                            style="width: 250px; text-align: center;"
                        >
                            <img
                                src="https://via.placeholder.com/150"
                                alt={nombre}
                                style="border-radius: 50%; margin-bottom: 1rem;"
                            />
                            <h3>{nombre}</h3>
                            <p>{rol}</p>
                        </div>
                    ))
                }
            </div>
        </section>
    </body>
</html>
