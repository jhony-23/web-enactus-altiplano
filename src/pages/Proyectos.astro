---
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";

const proyectos = [
    { nombre: "Amaranto", ruta: "amaranto" },
    { nombre: "Ruta turística", ruta: "ruta-turistica" },
    { nombre: "Abono orgánico", ruta: "abono-organico" },
    { nombre: "Artesanías", ruta: "artesanias" },
    { nombre: "La miel", ruta: "la-miel" },
    { nombre: "Próximo proyecto", ruta: "proximo" },
];
---

<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <title>Proyectos - Enactus</title>
    </head>
    <body>
        <Navbar />
        <section class="section">
            <h2>Proyectos Sostenibles</h2>
            <div
                style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 1.5rem; margin-top: 2rem;"
            >
                {
                    proyectos.map(({ nombre, ruta }) => (
                        <div class="card">
                            <img
                                src="https://via.placeholder.com/300x150"
                                alt={nombre}
                                style="width: 100%; border-radius: 8px; margin-bottom: 1rem;"
                            />
                            <h3>{nombre}</h3>
                            <p>
                                Descripción corta del proyecto{" "}
                                {nombre.toLowerCase()}.
                            </p>
                            <a href={`/proyectos/${ruta}`} class="button">
                                Ver más
                            </a>
                        </div>
                    ))
                }
            </div>
        </section>
    </body>
</html>
